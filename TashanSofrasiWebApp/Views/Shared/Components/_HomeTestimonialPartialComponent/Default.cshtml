@model List<TashanSofrasiWebApp.DTOs.TestimonialDTOs.ResultTestimonialDTO>

<section class="client_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center psudo_white_primary mb_45">
            <h2>
                Müşterilerimiz Hakkımızda Neler Dedi?
            </h2>
        </div>
        <div class="carousel-wrap row ">
            <div class="owl-carousel client_owl-carousel">
                @foreach(var item in Model)
                {
                    @if(item.TestimonialStatus == true)
                    {
                        <div class="item">
                            <div class="box">
                                <div class="detail-box">
                                    <p>
                                        @item.TestimonialComment
                                    </p>
                                    <h6>
                                        @item.TestimonialNameSurname
                                    </h6>
                                    <p>
                                        @item.TestimonialTitle
                                    </p>
                                </div>
                                <div class="img-box">
                                    <img src="@item.TestimonialImageURL" alt="" class="box-img">
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>