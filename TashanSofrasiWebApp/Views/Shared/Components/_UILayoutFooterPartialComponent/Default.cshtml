@model TashanSofrasiWebApp.DTOs.FooterDTOs.ResultFooterDTO

<footer class="footer_section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 footer-col">
                <div class="footer_contact">
                    <h4>
                        Bize Ulaşın
                    </h4>
                    <div class="contact_link_box">
                        <a href="">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                            <span>
                                @Model.FooterLocation
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-phone" aria-hidden="true"></i>
                            <span>
                                @Model.FooterPhoneNumber
                            </span>
                        </a>
                        <a href="">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <span>
                               @Model.FooterEmail
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <div class="footer_detail">
                    <a href="" class="footer-logo">
                        Taşhan Sofrası
                    </a>
                    <p>
                        @Model.FooterDescription
                    </p>
                    @await Component.InvokeAsync("_UILayoutSocialMediaPartialComponent")
                </div>
            </div>
            <div class="col-md-4 footer-col">
                <h4>
                    Açılış Kapanış Saatleri
                </h4>
                <p>
                    @Model.FooterOpeningHours
                </p>
            </div>
        </div>
        <div class="footer-info">
            <p>
                &copy; <span id="displayYear"></span> Tüm Hakları Saklıdır
                <a href="https://html.design/">Free Html Templates</a><br><br>
                &copy; <span id="displayYear"></span> Düzenleyen
                <a href="https://burakarslan.me" target="_blank">Burak Arslan</a>
                <p>Bu site .NET Core 8 kullanılarak geliştirilmiştir.</p>
            </p>
        </div>
    </div>
</footer>