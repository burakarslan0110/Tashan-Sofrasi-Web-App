@model List<TashanSofrasiWebApp.DTOs.DiscountDTOs.ResultDiscountDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirimli ürünlerle ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Sadece iki adet indirimli ürüne sahip olabilirsiniz.</strong>
                        </div>
                        <div class="table-responsive">
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">İndirim Oranı</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Ürün Görseli</th>
                                        <th scope="col">Güncelle</th>
                                        <th scope="col">Durum Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.DiscountTitle</td>
                                            <td>%@item.DiscountAmount</td>
                                            <td>
                                                @if (item.DiscountStatus == true)
                                                {
                                                    <span class="badge badge-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Pasif</span>
                                                }
                                            <td><img width="50" height="50" src="@item.DiscountImageURL"/></td>
                                            <td><a href="/Admin/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
                                                <td>@if(item.DiscountStatus == true)
                                                    {
                                                        <a href="/Admin/Discount/ChangeDiscountStatusToFalse/@item.DiscountID" class="btn btn-danger">Pasifleştir</a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/Admin/Discount/ChangeDiscountStatusToTrue/@item.DiscountID" class="btn btn-success">Aktifleştir</a>
                                                    }
                                                </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



