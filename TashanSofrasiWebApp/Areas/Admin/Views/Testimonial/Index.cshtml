@model List<TashanSofrasiWebApp.DTOs.TestimonialDTOs.ResultTestimonialDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslarla ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Referans Ad Soyad</th>
                                    <th scope="col">Referans Başlık</th>
                                    <th scope="col">Referans Profil Görseli</th>
                                    <th scope="col">Referans Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Durum Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.TestimonialNameSurname</td>
                                        <td>@item.TestimonialTitle</td>
                                        <td><img width="50" height="50" src="@item.TestimonialImageURL" /></td>
                                        @if(item.TestimonialStatus == true)
                                        {
                                            <td>Aktif</td>
                                        }
                                        else
                                        {
                                            <td>Pasif</td>
                                        }
                                            <td><a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                                        @if(item.TestimonialStatus == true)
                                        {
                                           <td><a href="/Admin/Testimonial/ChangeTestimonialStatusToFalse/@item.TestimonialID" class="btn btn-danger">Pasifleştir</a></td>
                                        }
                                        else
                                        {
                                           <td><a href="/Admin/Testimonial/ChangeTestimonialStatusToTrue/@item.TestimonialID" class="btn btn-success">Aktifleştir</a></td>
                                        }
                                        </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                        <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Yeni Referans Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



