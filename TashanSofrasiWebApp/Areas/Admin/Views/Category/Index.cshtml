@model List<TashanSofrasiWebApp.DTOs.CategoryDTOs.ResultCategoryDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Kategorilerle ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                        </div>
                        <div class="table-responsive">
                            <table class="table mt-3">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Kategori Adı</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                        <th scpoe="col">Durum Değiştir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CategoryName</td>
                                            @if(item.CategoryStatus == true)
                                            {
                                                <td><span class="badge badge-success">Aktif</span></td>
                                            }
                                            else
                                            {
                                                <td><span class="badge badge-danger">Pasif</span></td>
                                            }
                                            <td><a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                            @if (item.CategoryStatus == true)
                                            {
                                                <td><a href="/Admin/Category/CategoryStatusChangeToFalse/@item.CategoryID" class="btn btn-danger">Pasifleştir</a></td>
                                            }
                                            else
                                            {
                                                <td><a href="/Admin/Category/CategoryStatusChangeToTrue/@item.CategoryID" class="btn btn-success">Aktifleştir</a></td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <a href="/Admin/Category/CreateCategory/" class="btn btn-outline-primary">Yeni Kategori Oluştur</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



