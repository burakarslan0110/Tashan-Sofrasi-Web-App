@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Qr Kod İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Index" asp-controller="QRCode">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">QR kod Oluşturma</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Bu sayfadan qr kod oluşturabilirsiiz.
                            </div>
                            <div class="form-group">
                                <label for="qrCode">QR Code Oluşturulacak URL</label>
                                <input type="text" class="form-control" id="qrCode" name="value" placeholder="QR Code Oluşturulacak URL">
                                <input type="submit" class="btn btn-primary" value="QR Code Oluştur">"
                            </div>
                        </div>
                    </div>
                </form>
                @if (ViewBag.QRCodeImage != null)
                {
                    <img src="@ViewBag.QRCodeImage" alt="" style="width:400px; height:400px;" />
                }
            </div>
        </div>
    </div>
</div>




